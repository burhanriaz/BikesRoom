@model BikeRoom.Models.BikeModelViewModel.BikeModelVM
@using BikesRoom.Extentions
<h1> Delete Bikes Model</h1>
<br />
<br />
<h4>Are You sure to want delete</h4>
<br />
<br />
<form method="POST" action="Delete">
    <input type="hidden"  asp-for="BikesModel.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MakedByCompany"> Company Name</label>
        </div>
        <div class="col-4">
            <select disabled asp-for="BikesModel.MakedByFk" asp-items="@Model.MakedByCompany.ToSelectListItem()" class="form-control">
                <option>Select Brand Name</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="BikesModel.Name"> Bike Model</label>
        </div>
        <div class="col-4">
            <input disabled class="form-control" asp-for="BikesModel.Name" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Delete" />
        <a asp-action="Index" class="btn btn-danger">Back</a>
    </div>
</form>



